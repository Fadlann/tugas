#include <iostream>
#include <list> 
#include <iterator> 
#include <array>
#include <string>
#include <stdio.h>
#include <ctype.h>


using namespace std;

struct biodata
{
	string nama;
	int tanggal;
	char bulan[100];
	int tahun;
	string hobi;
};

int main(int argc, char** argv) 
{
	bool buatBiodata = true;
    list <biodata> daftarSahabat; 

	while(buatBiodata)
	{
		isiData:
		biodata sahabat;
		cout<<"Masukin nama sahabatmu: "; getline(cin,sahabat.nama);
		cout<<"Masukin tanggal lahir sahabatmu: "; cin>>sahabat.tanggal;
		cout<<"Masukin bulan lahir sahabatmu: "; cin>>sahabat.bulan;
		cout<<"Masukin tahun lahir sahabatmu: "; cin>>sahabat.tahun;
		cin.ignore();
		cout<<"Masukin hobi sahabatmu: "; getline(cin,sahabat.hobi);
		cout<<"Apakah data sudah benar?[y/n] ";
		back:
		char kebenaran; 
		cin>>kebenaran;
		switch(tolower(kebenaran)) 
		{
		   case 'y':
		    	break;
		   case 'n':
		   		cin.ignore();
		   		goto isiData;
		    	break;
		   default : 
		      	cout<<"Mohon pilih y atau n saja"<<endl;
		      	goto back;
		      	break;
		}
		daftarSahabat.push_back(sahabat);
		cout<<"Mau nambah [y/n] ";
		ask:
		char input;
		cin>>input; cout<<endl;
		switch(tolower(input)) 
		{
		   case 'y':
		      buatBiodata = true;
		      break;
		   case 'n':
		      buatBiodata = false;
		      break;
		  
		   default : 
		      cout<<"Mohon pilih y atau n saja"<<endl;
		      goto ask;
		      break;
		}
		cin.ignore();
	}
		
	list<biodata>::iterator it;
	int i = 0;
	cout<<"Daftar Sahabat Anda"<<endl;
	cout<<"No.\tNama\t\t\ttanggal kelahiran\t\thobi"<<endl;
	for (it = daftarSahabat.begin(); it != daftarSahabat.end(); it++)
	{
		i++;
		cout<<i<<"."<<"\t"<<it->nama<<"\t\t\t\t"<<it->tanggal<<" "<<it->bulan<<" "<<it->tahun<<"\t\t"<<it->hobi<<endl;
		cout<<endl;
	}
	
	return 0;
}
