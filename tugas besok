#include <iostream>
#include <list>
#include <string>
using namespace std;

void konfigBio();
void menu();
void bio();

list<string> listNama;
list<string> listNIM;
list<string> listUTS;
list<string> listUAS;

int main(int argc, const char * argv[]) {
    menu();
    return 0;
}

void konfigBio()
{
    bool lanjut = false;
    int i = 0;
    do {
        i++;
        cout<<"------------------"<<endl;
        cout<<"Konfgurasi Biodata "<< i <<endl;
        cout<<"------------------"<<endl;
        cout<<"Masukkan data "<<i<<endl;
        
        cout<<"Nama : ";
        string nama;
        getline(cin, nama, '\n');
        getline(cin, nama, '\n');
        listNama.push_back(nama);
        
        cout<<"NIM : ";
        string NIM;
        getline(cin, NIM, '\n');
        listNIM.push_back(NIM);
        
        cout<<"Nilai UTS : ";
        string UTS;
        getline(cin, UTS, '\n');
        listUTS.push_back(UTS);
        
        cout<<"Nilai UAS : ";
        string UAS;
        getline(cin, UAS, '\n');
        listUAS.push_back(UAS);
        
        pilihan:
        char pil;
        cout<<"apakah ingin menambah data? [y/n]? ";
        cin>>pil;
        cout<<endl;
        if( pil == 'y' || pil == 'Y'  )
            lanjut = true;
        else if ( pil == 'n' || pil == 'N' )
            lanjut = false;
        else
        {
            cout<<"mohon pilih y atau n saja";
            goto pilihan;
        }
    } while(lanjut);
    cout<<string(50,'\n');
    menu();

}

void bio()
{
    if(listNama.size() <= 0)
    {
        cout<<"mohon isi data terlebih dahulu";
        cin.get();
        menu();
        return;
    }
    
    int batas = listNama.size();
    
    string arrNama[listNama.size()];
    copy(listNama.begin(), listNama.end(), arrNama);
    
    string arrNIM[listNama.size()];
    copy(listNIM.begin(), listNIM.end(), arrNIM);

    string arrUTS[listNama.size()];
    copy(listUTS.begin(), listUTS.end(), arrUTS);

    string arrUAS[listNama.size()];
    copy(listUAS.begin(), listUAS.end(), arrUAS);

    for(int i = 0; i < batas; i++){
        
        cout<<"------------------"<<endl;
        cout<<" Biodata "<< i + 1 <<endl;
        cout<<"------------------"<<endl;
        
        cout<<"Nama : "<< arrNama[i]<<endl;
        
        
        cout<<"NIM : "<< arrNIM[i]<<endl;

        
        cout<<"Nilai UTS : "<< arrUTS[i]<<endl;
        
        
        cout<<"Nilai UAS : "<< arrUAS[i]<<endl;


        cout<<endl;
    }
    cout<<"tekan tombol apapun untuk kembali ke menu utama";
    system("read");
    cout<<string(50,'\n');
    menu();

}

void menu()
{
    cout<<"-------------------"<<endl;
    cout<<"MENU UTAMA"<<endl;
    cout<<"-------------------"<<endl;
    cout<<"[1] Konfig Bio"<<endl;
    cout<<"[2] Bio"<<endl;
    cout<<"[3] Keluar"<<endl;
    cout<<"Masukkan pilihan : ";
    pilihan:
    int pilihan;
    cin>>pilihan;
    switch(pilihan)
    {
        case 1:
            cout<<string(50,'\n');
            konfigBio();
            break;
        case 2:
            cout<<string(50,'\n');
            bio();
            break;
        case 3:
            break;
        default:
            cout<<string(50,'\n');
            cout<<"mohon pilih y atau n saja"<<endl;
            goto pilihan;
            break;
    }
}

